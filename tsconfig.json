{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "rootDirs": ["src", "test"],
    "baseUrl": "src",
    "paths": {
      "@/tests/*": ["../test/*"],
      "@/*": ["*"]
    }
  },
  "include": ["src", "test"],
  "exclude": []
}